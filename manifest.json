{
    "manifest_version": 3,
    "name": "Reading time",
    "version": "1.0",
    "description": "Add the reading time to Chrome Extension documentation articles",
    "action": {
      "default_popup": "hello.html",
      "default_icon": "hello_extensions.png"
    },
    "content_scripts": [
      {
        "js": ["scripts/script.js"],
        "matches": [
            "<all_urls>"
          ]
      }
    ]
  }